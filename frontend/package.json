{
  "name": "credit-default-swap-frontend",
  "version": "1.0.0",
  "description": "Credit Default Swap Trading Platform - Minimal Frontend",
  "private": true,
  "dependencies": {
    "@types/node": "^16.18.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.1",
    "react-scripts": "5.0.1",
    "recharts": "^3.3.0",
    "typescript": "^4.9.0"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "allure-js-commons": "^3.4.2",
    "autoprefixer": "^10.4.0",
    "jest-allure2-reporter": "^2.2.8",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --testPathPattern=__tests__/unit --watchAll=false",
    "test:unit": "craco test --testPathPattern=__tests__/unit --watchAll=false",
    "test:integration": "craco test --testPathPattern=__tests__/integration --watchAll=false",
    "test:all": "craco test --testPathPattern=__tests__ --watchAll=false",
    "test:watch": "craco test --testPathPattern=__tests__/unit --watch",
    "test:coverage": "craco test --testPathPattern=__tests__ --coverage --watchAll=false",
    "test:allure": "npm run test:all",
    "allure:clean": "rm -rf allure-results allure-report 2>/dev/null || true",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:serve": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "allure:report": "npm run test:allure && npm run allure:serve",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8081"
}
