{
  "name": "credit-default-swap-frontend",
  "version": "1.0.0",
  "description": "Credit Default Swap Trading Platform - Minimal Frontend",
  "private": true,
  "dependencies": {
    "@types/node": "^16.18.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.0",
    "eslint-plugin-security": "^1.7.1",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "retire": "^5.3.0",
    "tailwindcss": "^3.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:security": "eslint src --ext .ts,.tsx --config .eslintrc.security.js",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,md}",
    "audit:security": "npm audit --audit-level=moderate",
    "security:full": "npm run lint:security && npm run audit:security && npm run type-check",
    "pre-commit": "npm run format:check && npm run lint && npm run type-check",
    "security:audit": "npm audit --json > audit-npm.json 2>&1 || exit 0",
    "security:eslint": "eslint src --ext .ts,.tsx --config .eslintrc.security.js --format json --output-file eslint-security.json || exit 0",
    "security:retire": "retire --outputformat json --outputpath retire-report.json --path . || exit 0",
    "security:scan": "npm run security:audit && npm run security:eslint && npm run security:retire"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8081"
}
