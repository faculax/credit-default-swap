<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    
    <!-- Suppress false positives for Spring Boot framework -->
    <suppress>
        <notes><![CDATA[
        Spring Boot framework false positives - these are legitimate dependencies
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework.*$</packageUrl>
        <cve>CVE-2016-1000027</cve>
    </suppress>
    
    <!-- Spring Cloud Gateway specific suppressions -->
    <suppress>
        <notes><![CDATA[
        Spring Cloud Gateway framework - suppress known false positives
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.cloud/spring-cloud-starter-gateway@.*$</packageUrl>
        <cvssBelow>5.0</cvssBelow>
    </suppress>
    
    <!-- Suppress Lombok related false positives -->
    <suppress>
        <notes><![CDATA[
        Lombok is a compile-time dependency only and not part of runtime
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.projectlombok/lombok@.*$</packageUrl>
    </suppress>
    
    <!-- Spring Boot Actuator -->
    <suppress>
        <notes><![CDATA[
        Spring Boot Actuator is properly secured in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring-boot-starter-actuator@.*$</packageUrl>
        <cvssBelow>6.0</cvssBelow>
    </suppress>
    
    <!-- Netty framework used by Spring Cloud Gateway -->
    <suppress>
        <notes><![CDATA[
        Netty framework - ensure latest version is used
        Gateway routing security depends on this
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/io\.netty/.*$</packageUrl>
        <cvssBelow>5.0</cvssBelow>
    </suppress>
    
    <!-- Reactor framework -->
    <suppress>
        <notes><![CDATA[
        Reactor framework used by Gateway - monitor for updates
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/io\.projectreactor/.*$</packageUrl>
        <cvssBelow>5.0</cvssBelow>
    </suppress>
    
</suppressions>