# ===============================================================================
# DefectDojo Configuration
# ===============================================================================
# Copy this file to .env and customize for your environment
# Usage: source .env (Linux/Mac) or use directly in scripts
# ===============================================================================

# DefectDojo URL
# Default: http://localhost:8081
DD_URL=http://localhost:8081

# Admin Credentials
# ⚠️ CHANGE THESE FOR PRODUCTION!
DD_USER=admin
DD_PASSWORD=admin

# Product Configuration
# This is the product name that will be created in DefectDojo
PRODUCT_NAME="Credit Default Swap Platform"

# Reports Directory
# Location of security scan results
REPORTS_PATH=../backend/target/security-reports

# ===============================================================================
# Docker Configuration (Optional Overrides)
# ===============================================================================

# PostgreSQL Configuration
POSTGRES_DB=defectdojo
POSTGRES_USER=defectdojo
POSTGRES_PASSWORD=defectdojo

# Port Mappings (change if conflicts exist)
DEFECTDOJO_PORT=8081
POSTGRES_PORT=5433

# ===============================================================================
# Advanced Settings
# ===============================================================================

# Django Secret Key (generate with: openssl rand -base64 64)
# DD_SECRET_KEY=change-this-in-production

# Credential AES Key (generate with: openssl rand -base64 32)
# DD_CREDENTIAL_AES_256_KEY=change-this-credential-key

# Debug Mode (use False for production)
DD_DEBUG=False

# Celery Worker Concurrency
CELERY_WORKER_CONCURRENCY=3

# ===============================================================================
# CI/CD Integration (Optional)
# ===============================================================================

# Set these in CI/CD environment for automated uploads
# DEFECTDOJO_API_TOKEN=your-api-token-here
# DEFECTDOJO_PRODUCT_ID=1
# DEFECTDOJO_ENGAGEMENT_ID=1
